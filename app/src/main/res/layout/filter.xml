<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/filter_view"
    android:weightSum="1"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="Select Filters"
        android:gravity="center"
        android:textSize="30dp"/>

    <LinearLayout
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:clickable="true"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:src="@drawable/no_dairy_alpha"
            android:id="@+id/btn_dairy_free"/>

        <ImageView
            android:clickable="true"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:src="@drawable/gluten_free_2"
            android:id="@+id/btn_gluten_free"/>

    </LinearLayout>

    <LinearLayout
        android:paddingBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:clickable="true"
            android:paddingEnd="10dp"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:src="@drawable/vegan_alpha"
            android:id="@+id/btn_vegan"/>

        <ImageView
            android:clickable="true"
            android:paddingStart="10dp"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:src="@drawable/vegitarian_alpha"
            android:id="@+id/btn_vegetarian"/>

    </LinearLayout>

</LinearLayout>